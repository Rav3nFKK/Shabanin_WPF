<Window x:Class="WPFForme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFForme"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>

    </Window.Resources>

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text= "$$$Тут могла быть Ваша реклама, но будет моя$$$"  Grid.Row="2" Grid.ColumnSpan="2"  Style="{StaticResource rek}" />
        <Image Source="/img/Ban.jpg" Grid.Row="1"/>
        <DockPanel Grid.ColumnSpan="2" LastChildFill="True">
            <Image Source="/img/log.jpg" DockPanel.Dock="Left"/>
            <TextBlock Text= "Кричащий заголовок " Style="{StaticResource zag}" />
        </DockPanel>
        <Frame Name="FrameMain" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden"/>

    </Grid>





</Window>
